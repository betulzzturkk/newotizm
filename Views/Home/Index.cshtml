@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container-fluid p-0">
    <!-- Animated Background Hero Section -->
    <section class="hero-section">
        <div class="animated-bg"></div>
        <div class="container position-relative">
            <div class="row align-items-center min-vh-100">
                <div class="col-lg-6 text-center text-lg-start">
                    <h1 class="hero-title animate__animated animate__fadeInLeft">
                        Özel Eğitimde<br>
                        <span class="gradient-text">Yenilikçi</span><br>
                        Yaklaşım
                    </h1>
                    <p class="hero-subtitle animate__animated animate__fadeInLeft animate__delay-1s">
                        Otizmli çocukların eğitim yolculuğunda yanlarındayız. 
                        Eğlenceli ve interaktif içeriklerle öğrenmeyi kolaylaştırıyoruz.
                    </p>
                    <div class="d-flex justify-content-center justify-content-lg-start gap-3 mt-4">
                        <a asp-controller="Course" asp-action="Index" class="btn btn-gradient btn-lg animate__animated animate__bounceIn animate__delay-2s">
                            <i class="fas fa-graduation-cap me-2"></i>
                            Eğitimleri Keşfet
                        </a>
                        <a asp-controller="Home" asp-action="Info" class="btn btn-outline-light btn-lg animate__animated animate__bounceIn animate__delay-2s">
                            <i class="fas fa-info-circle me-2"></i>
                            Daha Fazla Bilgi
                        </a>
                    </div>
                </div>
                <div class="col-lg-6 d-none d-lg-block">
                    <div class="floating-images">
                        <img src="/images/hero-illustration.svg" alt="Eğitim İllüstrasyonu" class="img-fluid main-image animate__animated animate__fadeInRight">
                        <div class="floating-shape shape1"></div>
                        <div class="floating-shape shape2"></div>
                        <div class="floating-shape shape3"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Platform Features -->
    <section class="features-section">
        <div class="container py-5">
            <h2 class="text-center mb-5 section-title animate__animated animate__fadeInUp">
                Platformumuzun Özellikleri
            </h2>
            
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="feature-card animate__animated animate__fadeInUp">
                        <div class="feature-icon bg-gradient-1">
                            <i class="fas fa-brain"></i>
                        </div>
                        <h3>Özelleştirilmiş Eğitim</h3>
                        <p>Her çocuğun öğrenme hızına ve stiline uygun içerikler sunuyoruz.</p>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="feature-card animate__animated animate__fadeInUp" style="animation-delay: 0.2s">
                        <div class="feature-icon bg-gradient-2">
                            <i class="fas fa-gamepad"></i>
                        </div>
                        <h3>Eğlenceli Öğrenme</h3>
                        <p>Oyunlaştırılmış içeriklerle öğrenmeyi keyifli hale getiriyoruz.</p>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="feature-card animate__animated animate__fadeInUp" style="animation-delay: 0.4s">
                        <div class="feature-icon bg-gradient-3">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <h3>İlerleme Takibi</h3>
                        <p>Detaylı raporlarla çocuğunuzun gelişimini takip edebilirsiniz.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Educational Content -->
    <section class="content-section">
        <div class="container py-5">
            <h2 class="text-center mb-5 section-title animate__animated animate__fadeInUp">
                Eğitim İçeriklerimiz
            </h2>
            
            <div class="row g-4">
                <div class="col-lg-3 col-md-6">
                    <div class="content-card animate__animated animate__fadeInUp">
                        <div class="content-icon">
                            <i class="fas fa-shapes"></i>
                        </div>
                        <h4>Temel Kavramlar</h4>
                        <ul class="content-list">
                            <li><i class="fas fa-check"></i> Renkler</li>
                            <li><i class="fas fa-check"></i> Şekiller</li>
                            <li><i class="fas fa-check"></i> Sayılar</li>
                        </ul>
                        <a href="#" class="btn btn-outline-primary">Keşfet</a>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="content-card animate__animated animate__fadeInUp" style="animation-delay: 0.2s">
                        <div class="content-icon">
                            <i class="fas fa-paw"></i>
                        </div>
                        <h4>Hayvanlar</h4>
                        <ul class="content-list">
                            <li><i class="fas fa-check"></i> Evcil Hayvanlar</li>
                            <li><i class="fas fa-check"></i> Vahşi Hayvanlar</li>
                            <li><i class="fas fa-check"></i> Hayvan Sesleri</li>
                        </ul>
                        <a href="#" class="btn btn-outline-primary">Keşfet</a>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="content-card animate__animated animate__fadeInUp" style="animation-delay: 0.4s">
                        <div class="content-icon">
                            <i class="fas fa-book-reader"></i>
                        </div>
                        <h4>Eğitici Masallar</h4>
                        <ul class="content-list">
                            <li><i class="fas fa-check"></i> Klasik Masallar</li>
                            <li><i class="fas fa-check"></i> Değerler Eğitimi</li>
                            <li><i class="fas fa-check"></i> Sosyal Beceriler</li>
                        </ul>
                        <a href="#" class="btn btn-outline-primary">Keşfet</a>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="content-card animate__animated animate__fadeInUp" style="animation-delay: 0.6s">
                        <div class="content-icon">
                            <i class="fas fa-hands-helping"></i>
                        </div>
                        <h4>Günlük Yaşam</h4>
                        <ul class="content-list">
                            <li><i class="fas fa-check"></i> Öz Bakım</li>
                            <li><i class="fas fa-check"></i> Görgü Kuralları</li>
                            <li><i class="fas fa-check"></i> Güvenlik</li>
                        </ul>
                        <a href="#" class="btn btn-outline-primary">Keşfet</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="cta-section">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <h2 class="mb-4 animate__animated animate__fadeInUp">Hemen Başlayalım!</h2>
                    <p class="mb-4 animate__animated animate__fadeInUp">
                        Ücretsiz hesap oluşturarak tüm eğitim içeriklerine erişebilir, 
                        çocuğunuzun gelişimini takip edebilirsiniz.
                    </p>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg animate__animated animate__bounceIn">
                        <i class="fas fa-user-plus me-2"></i>
                        Ücretsiz Kayıt Ol
                    </a>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
    /* Hero Section Styles */
    .hero-section {
        position: relative;
        overflow: hidden;
        background: linear-gradient(135deg, #2193b0, #6dd5ed);
        color: white;
    }

    .animated-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(45deg, #12c2e9, #c471ed, #f64f59);
        background-size: 400% 400%;
        animation: gradient 15s ease infinite;
        opacity: 0.3;
    }

    @keyframes gradient {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    .gradient-text {
        background: linear-gradient(to right, #fff, #ffeb3b);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 900;
    }

    .floating-images {
        position: relative;
        height: 100%;
    }

    .floating-shape {
        position: absolute;
        border-radius: 50%;
        animation: float 6s ease-in-out infinite;
    }

    .shape1 {
        width: 100px;
        height: 100px;
        background: rgba(255, 255, 255, 0.1);
        top: 20%;
        left: 10%;
        animation-delay: 0s;
    }

    .shape2 {
        width: 80px;
        height: 80px;
        background: rgba(255, 255, 255, 0.15);
        top: 60%;
        right: 20%;
        animation-delay: 2s;
    }

    .shape3 {
        width: 60px;
        height: 60px;
        background: rgba(255, 255, 255, 0.2);
        bottom: 20%;
        left: 30%;
        animation-delay: 4s;
    }

    @keyframes float {
        0% { transform: translateY(0); }
        50% { transform: translateY(-20px); }
        100% { transform: translateY(0); }
    }

    /* Feature Cards */
    .feature-card {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        text-align: center;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        height: 100%;
        border: 2px solid transparent;
    }

    .feature-card:hover {
        transform: translateY(-10px);
        border-color: #2193b0;
    }

    .feature-icon {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        font-size: 2rem;
        color: white;
    }

    .bg-gradient-1 {
        background: linear-gradient(135deg, #12c2e9, #c471ed);
    }

    .bg-gradient-2 {
        background: linear-gradient(135deg, #f64f59, #c471ed);
    }

    .bg-gradient-3 {
        background: linear-gradient(135deg, #c471ed, #12c2e9);
    }

    /* Content Cards */
    .content-section {
        background: #f8f9fa;
        position: relative;
    }

    .content-card {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        text-align: center;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        height: 100%;
    }

    .content-card:hover {
        transform: translateY(-10px);
    }

    .content-icon {
        font-size: 2.5rem;
        color: #2193b0;
        margin-bottom: 1.5rem;
    }

    .content-list {
        list-style: none;
        padding: 0;
        margin-bottom: 1.5rem;
        text-align: left;
    }

    .content-list li {
        margin-bottom: 0.5rem;
        color: #666;
    }

    .content-list li i {
        color: #2193b0;
        margin-right: 0.5rem;
    }

    /* Buttons */
    .btn-gradient {
        background: linear-gradient(45deg, #12c2e9, #c471ed);
        border: none;
        color: white;
        padding: 0.75rem 2rem;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-gradient:hover {
        transform: scale(1.05);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        color: white;
    }

    .btn-outline-light {
        border: 2px solid white;
        color: white;
        padding: 0.75rem 2rem;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-outline-light:hover {
        background: white;
        color: #2193b0;
        transform: scale(1.05);
    }

    /* CTA Section */
    .cta-section {
        background: linear-gradient(135deg, #12c2e9, #c471ed);
        color: white;
        position: relative;
        overflow: hidden;
    }

    .cta-section::before {
        content: '';
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        background-image: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='%23ffffff' fill-opacity='0.1' fill-rule='evenodd'/%3E%3C/svg%3E");
        opacity: 0.1;
    }

    /* Responsive Styles */
    @media (max-width: 768px) {
        .hero-title {
            font-size: 2.5rem;
        }
        
        .hero-section {
            padding: 3rem 0;
        }
        
        .feature-card, .content-card {
            margin-bottom: 2rem;
        }
    }
</style>

@section Scripts {
    <script>
        // GSAP Animasyonları
        gsap.registerPlugin(ScrollTrigger);

        gsap.from('.floating-shape', {
            y: 50,
            opacity: 0,
            duration: 1,
            stagger: 0.2,
            ease: "power2.out"
        });

        gsap.to('.floating-shape', {
            y: -20,
            duration: 2,
            yoyo: true,
            repeat: -1,
            ease: "power1.inOut",
            stagger: {
                amount: 1
            }
        });

        // Feature kartları için scroll animasyonu
        gsap.from('.feature-card', {
            scrollTrigger: {
                trigger: '.features-section',
                start: 'top center+=100',
                toggleActions: 'play none none reverse'
            },
            y: 100,
            opacity: 0,
            duration: 0.8,
            stagger: 0.2,
            ease: 'power3.out'
        });

        // Content kartları için scroll animasyonu
        gsap.from('.content-card', {
            scrollTrigger: {
                trigger: '.content-section',
                start: 'top center+=100',
                toggleActions: 'play none none reverse'
            },
            y: 100,
            opacity: 0,
            duration: 0.8,
            stagger: 0.2,
            ease: 'power3.out'
        });
    </script>
} 