@model AutismEducationPlatform.Web.Models.ViewModels.ParentDashboardViewModel

@{
    ViewData["Title"] = "Veli Paneli";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="row">
        <!-- Çocuk Bilgileri -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Çocuk Bilgileri</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <strong>Ad Soyad:</strong> @(Model?.ChildInfo?.Name ?? "Belirtilmemiş")<br />
                        <strong>Yaş:</strong> @Model?.ChildInfo?.Age<br />
                        <strong>Tanı:</strong> @(Model?.ChildInfo?.Diagnosis ?? "Belirtilmemiş")
                    </p>
                </div>
            </div>
        </div>

        <!-- Kurslar -->
        <div class="col-md-8 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Kayıtlı Kurslar</h5>
                </div>
                <div class="card-body">
                    @if (Model?.Courses != null && Model.Courses.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Kurs Adı</th>
                                        <th>Durum</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var course in Model.Courses)
                                    {
                                        <tr>
                                            <td>@course.Title</td>
                                            <td>@course.Status</td>
                                            <td>
                                                <a asp-action="CourseDetails" asp-route-id="@course.Id" class="btn btn-sm btn-primary">Detaylar</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Henüz kayıtlı kurs bulunmamaktadır.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- İlerleme Raporu -->
    <div class="row">
        <div class="col-12 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">İlerleme Raporu</h5>
                </div>
                <div class="card-body">
                    @if (Model?.ProgressReport != null)
                    {
                        <h6>@Model.ProgressReport.Title</h6>
                        <p>@Model.ProgressReport.Content</p>
                        <small class="text-muted">Rapor Tarihi: @Model.ProgressReport.Date.ToString("dd/MM/yyyy")</small>
                    }
                    else
                    {
                        <p class="text-muted">Henüz ilerleme raporu bulunmamaktadır.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 