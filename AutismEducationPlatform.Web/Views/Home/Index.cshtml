@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="hero-section text-center py-5 animate__animated animate__fadeIn">
    <h1 class="display-4 mb-4">Otizm Eğitim Platformuna Hoş Geldiniz</h1>
    <p class="lead mb-4">Çocuğunuzun gelişimi için özel olarak hazırlanmış eğitim içerikleri</p>
    <a href="/Course" class="btn btn-primary btn-lg px-4">Eğitimleri Keşfet</a>
</div>

<div class="features-section py-5">
    <div class="row g-4">
        <div class="col-md-4 animate__animated animate__fadeInLeft">
            <div class="feature-card text-center p-4">
                <i class="fas fa-book-reader feature-icon mb-3"></i>
                <h3>Özel Eğitim İçerikleri</h3>
                <p>Her çocuğun ihtiyacına uygun özelleştirilmiş eğitim materyalleri</p>
            </div>
        </div>
        <div class="col-md-4 animate__animated animate__fadeInUp">
            <div class="feature-card text-center p-4">
                <i class="fas fa-chart-line feature-icon mb-3"></i>
                <h3>Gelişim Takibi</h3>
                <p>Düzenli raporlar ve ilerleme grafikleri ile çocuğunuzun gelişimini takip edin</p>
            </div>
        </div>
        <div class="col-md-4 animate__animated animate__fadeInRight">
            <div class="feature-card text-center p-4">
                <i class="fas fa-users feature-icon mb-3"></i>
                <h3>Uzman Desteği</h3>
                <p>Alanında uzman eğitmenlerden sürekli destek ve rehberlik</p>
            </div>
        </div>
    </div>
</div>

<div class="cta-section text-center py-5 animate__animated animate__fadeIn">
    <h2 class="mb-4">Hemen Başlayın</h2>
    <p class="lead mb-4">Çocuğunuzun eğitim yolculuğunda yanınızdayız</p>
    <div class="d-flex justify-content-center gap-3">
        <a href="/Account/Register" class="btn btn-success btn-lg">Ücretsiz Kayıt Ol</a>
        <a href="/Home/About" class="btn btn-outline-primary btn-lg">Daha Fazla Bilgi</a>
    </div>
</div>

<style>
    .hero-section {
        background: linear-gradient(135deg, #6dd5ed, #2193b0);
        color: white;
        padding: 4rem 0;
        border-radius: 15px;
        margin-bottom: 2rem;
    }

    .feature-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
        height: 100%;
    }

    .feature-card:hover {
        transform: translateY(-10px);
    }

    .feature-icon {
        font-size: 3rem;
        color: #2193b0;
    }

    .cta-section {
        background: #f8f9fa;
        border-radius: 15px;
        padding: 3rem;
        margin-top: 2rem;
    }

    .btn-lg {
        padding: 1rem 2rem;
        border-radius: 30px;
    }
</style>

@section Scripts {
    <script>
        // GSAP Animasyonları
        gsap.registerPlugin(ScrollTrigger);

        gsap.from('.floating-shape', {
            y: 50,
            opacity: 0,
            duration: 1,
            stagger: 0.2,
            ease: "power2.out"
        });

        gsap.to('.floating-shape', {
            y: -20,
            duration: 2,
            yoyo: true,
            repeat: -1,
            ease: "power1.inOut",
            stagger: {
                amount: 1
            }
        });

        // Feature kartları için scroll animasyonu
        gsap.from('.feature-card', {
            scrollTrigger: {
                trigger: '.features-section',
                start: 'top center+=100',
                toggleActions: 'play none none reverse'
            },
            y: 100,
            opacity: 0,
            duration: 0.8,
            stagger: 0.2,
            ease: 'power3.out'
        });

        // Content kartları için scroll animasyonu
        gsap.from('.content-card', {
            scrollTrigger: {
                trigger: '.content-section',
                start: 'top center+=100',
                toggleActions: 'play none none reverse'
            },
            y: 100,
            opacity: 0,
            duration: 0.8,
            stagger: 0.2,
            ease: 'power3.out'
        });
    </script>
}
